import os
Import('sfwprofile')
from building import *

cwd = GetCurrentDir()
group = []

src_utilitie = Split('''
MIMXRT1062/utilities/fsl_assert.c
MIMXRT1062/utilities/debug_console/fsl_debug_console.c
MIMXRT1062/utilities/str/fsl_str.c
''')
path = [cwd + '/CMSIS/Include', cwd + '/MIMXRT1062/utilities']
path += [cwd + '/MIMXRT1062/utilities/debug_console', cwd + '/MIMXRT1062/utilities/str']
group = DefineGroup('utilitie', src_utilitie, depend = [''], CPPPATH = path)

src_device = Split('''
MIMXRT1062/system_MIMXRT1062.c
''')
if sfwprofile.CROSS_TOOL == 'gcc':
    src_device += ['MIMXRT1062/gcc/startup_MIMXRT1062.S']
elif sfwprofile.CROSS_TOOL == 'keil':
    src_device += ['MIMXRT1062/arm/startup_MIMXRT1062.S']
elif sfwprofile.CROSS_TOOL == 'iar':
    src_device += ['MIMXRT1062/iar/startup_MIMXRT1062.s']
path = [cwd + '/CMSIS/Include',cwd + '/MIMXRT1062']
group =group + DefineGroup('device', src_device, depend = [''], CPPPATH = path)

src_drivers = Split('''
MIMXRT1062/drivers/fsl_common.c
MIMXRT1062/drivers/fsl_clock.c
MIMXRT1062/drivers/fsl_cache.c
''')

if GetDepend(['SOC_GPIO']):
    src_drivers += ['MIMXRT1062/drivers/fsl_gpio.c']

if GetDepend(['SOC_LPUART']):
    src_drivers += ['MIMXRT1062/drivers/fsl_lpuart.c']

if GetDepend(['SOC_I2C']):
    src_drivers += ['MIMXRT1062/drivers/fsl_lpi2c.c']

if GetDepend(['SOC_SPI']):
    src_drivers += ['MIMXRT1062/drivers/fsl_lpspi.c']

if GetDepend(['SOC_HWTIMER']) or GetDepend(['SOC_PWM']):
    src_drivers += ['MIMXRT1062/drivers/fsl_gpt.c']

if GetDepend(['SOC_RTC']):
    src_drivers += ['MIMXRT1062/drivers/fsl_snvs_hp.c']
    src_drivers += ['MIMXRT1062/drivers/fsl_snvs_lp.c']

if GetDepend(['SOC_WDT']):
    src_drivers += ['MIMXRT1062/drivers/fsl_wdog.c']
    src_drivers += ['MIMXRT1062/drivers/fsl_rtwdog.c']

if GetDepend(['SOC_SDRAM']):
    src_drivers += ['MIMXRT1062/drivers/fsl_semc.c']

if GetDepend(['SOC_USB_HOST']) or GetDepend(['SOC_USB_DEVICE']):
    src_drivers += ['MIMXRT1062/drivers/fsl_usdhc.c']

if GetDepend(['SOC_FLEXSPI']):
    src_drivers += ['MIMXRT1062/drivers/fsl_flexspi.c']
    
if GetDepend(['COMPONENT_SDMMC']):
    src_drivers += ['MIMXRT1062/drivers/fsl_usdhc.c']

if GetDepend(['COMPONENT_PHY']):
    src_drivers += ['MIMXRT1062/drivers/fsl_enet.c']
	
if GetDepend(['COMPONENT_MBEDTLS']):
    src_drivers += ['MIMXRT1062/drivers/fsl_dcp.c']
    src_drivers += ['MIMXRT1062/drivers/fsl_trng.c']	
	
path = [cwd + '/CMSIS/Include', cwd + '/MIMXRT1062', cwd + '/MIMXRT1062/drivers']
group =group + DefineGroup('driver', src_drivers, depend = [''], CPPPATH = path)

Return('group')
